{
  "name": "typora-test-theme",
  "version": "1.0.0",
  "repository": "git@github.com:gsxhnd/typora-test-theme.git",
  "author": "伍轻鸣 <gsxhnd@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "yarn build:light & yarn build:dark",
    "test": "yarn test:light & yarn test:dark",
    "build:light": "lessc --clean-css='--s1 --advanced' src/test-light.less dist/test-light.css",
    "build:dark": "lessc --clean-css='--s1 --advanced' src/test-dark.less dist/test-dark.css",
    "test:light": "lessc src/test-light.less dist/test-light.css",
    "test:dark": "lessc src/test-dark.less dist/test-dark.css",
    "clean": "rm dist/*"
  },
  "devDependencies": {
    "less": "^4.1.3",
    "less-plugin-clean-css": "^1.5.1"
  }
}
